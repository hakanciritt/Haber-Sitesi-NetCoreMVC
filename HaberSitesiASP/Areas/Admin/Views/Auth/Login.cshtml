@model User
@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/login.css" rel="stylesheet">

    <style>
        .field-validation-error{
            color:red;
        }
    </style>
</head>

<body class="text-center">
    <form method="post" class="form-signin" action="/Admin/Auth/Login">
        <h1 class="h3 mb-3 font-weight-normal">Admin Panel</h1>
        <div class="form-group">
            <label for="username" class="sr-only">Email address</label>
            <input asp-for="UserName" type="text" id="username" class="form-control" placeholder="Email"  autofocus>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <label for="password" class="sr-only">Password</label>
            <input asp-for="Password" type="password" id="password" class="form-control" placeholder="Password" >
            <span asp-validation-for=Password></span>
        </div>
        <submit class="btn btn-lg btn-primary btn-block" value="Giriş"></submit>
        <p class="mt-5 mb-3 text-muted">&copy; 2020-2021</p>
    </form>
</body>
</html>
