@model List<Category>

@{
    Layout = null;
}

<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">
                <div class="widget">
                    <div class="footer-text text-left">
                        <a asp-controller="Home" asp-action="Index"><img src="~/haber/haber-logo.png" alt="" class="img-fluid"></a>
                        <p>En güvenilir haber siteniz.</p>
                        <div class="social">
                            <a href="#" data-toggle="tooltip" data-placement="bottom" title="Facebook"><i class="fa fa-facebook"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="bottom" title="Twitter"><i class="fa fa-twitter"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="bottom" title="Instagram"><i class="fa fa-instagram"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="bottom" title="Google Plus"><i class="fa fa-google-plus"></i></a>
                            <a href="#" data-toggle="tooltip" data-placement="bottom" title="Pinterest"><i class="fa fa-pinterest"></i></a>
                        </div>
                        <hr class="invis">
                    </div>
                </div>
            </div>

            <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <h2 class="widget-title">Popüler Kategoriler</h2>
                    <div class="link-widget">
                        <ul>
                            @foreach (var category in Model.Take(5))
                            {
                                <li>
                                    <a title="@category.Description" asp-controller="Home" asp-action="Category" asp-route-id="@category.Id">@category.Name</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-2 col-md-12 col-sm-12 col-xs-12">
                <div class="widget">
                    <h2 class="widget-title">Sayfalar</h2>
                    <div class="link-widget">
                        <ul>
                            <li><a asp-controller="Home" asp-action="Index">Anasayfa</a></li>
                            <li><a asp-controller="AboutUs" asp-action="Index">Hakkımızda</a></li>
                            <li><a asp-controller="Contact" asp-action="Index">İletişim</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-center">
                <br>
                <div class="copyright">&copy; Hakan Cirit @DateTime.Now.Year</div>
            </div>
        </div>
    </div>
</footer>